<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:textAlignment="center"
    tools:context=".CourseDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/appBar_cd"
            android:paddingEnd="20dp"
            app:menu="@menu/iconsbars"
            android:gravity="top"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/back_arrow"
            android:background="?attr/colorPrimaryDark">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="Course Information"
                android:textColor="@android:color/white"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:id="@+id/scroller"
            android:fillViewport="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingHorizontal="16dp"
                android:id="@+id/lls1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#000"
                    android:fontFamily="@font/rubrik"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:id="@+id/courseName"
                    android:textSize="25sp"
                    android:text="Course Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.card.MaterialCardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card1"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lightGrey">

                    <LinearLayout
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:orientation="vertical"
                        android:id="@+id/lls2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/d_head"
                            android:textSize="20sp"
                            android:text="Description:"
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik_sb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/description"
                            android:layout_marginTop="10dp"
                            android:textSize="20sp"
                            android:text="Description:"
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card3"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lightGrey">

                    <LinearLayout
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:orientation="vertical"
                        android:id="@+id/lls3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/s_head"
                            android:textSize="20sp"
                            android:text="Syllabus:"
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik_sb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:gravity="start"
                            android:id="@+id/syllabus"
                            android:layout_marginTop="10dp"
                            android:textSize="20sp"
                            android:text="Description:"
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card4"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lightGrey">

                    <LinearLayout
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:orientation="vertical"
                        android:id="@+id/lls4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/demo_head"
                            android:textSize="20sp"
                            android:text="Students Demography:"
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik_sb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <com.github.mikephil.charting.charts.PieChart
                            android:layout_marginTop="10dp"
                            android:id = "@+id/pieChart"
                            android:layout_width = "match_parent"
                            android:layout_height = "250dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prof_head"
                        android:paddingHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:fontFamily="@font/rubrik_sb"
                        android:text="Select Professor:"
                        android:textSize="20sp" />

                    <Spinner
                        android:paddingHorizontal="20dp"
                        android:id="@+id/professorSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded"
                        android:backgroundTint="@color/lightGrey" />

                </LinearLayout>


                <com.google.android.material.card.MaterialCardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card5"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lightGrey">

                    <LinearLayout
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:orientation="vertical"
                        android:id="@+id/lls5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/prof_heading"
                            android:textSize="20sp"
                            android:text="Professor Information:"
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik_sb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/prof_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik"
                            android:text="Professor Email: "
                            android:textSize="20sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/prof_rates_head"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik"
                            android:text="Professor Ratings: "
                            android:textSize="20sp" />

                        <RatingBar
                            android:id="@+id/prof_rating"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:saveEnabled="true"
                            android:visibility="gone"
                            android:isIndicator="true"
                            android:numStars="5"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card6"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lightGrey">

                    <LinearLayout
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:orientation="vertical"
                        android:id="@+id/lls6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/c_head"
                            android:textSize="20sp"
                            android:text="Course information:"
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik_sb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/c_rates_head"
                            android:textSize="20sp"
                            android:text="Course Ratings:"
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <RatingBar
                            android:id="@+id/course_rating"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:saveEnabled="true"
                            android:visibility="gone"
                            android:isIndicator="true"
                            android:numStars="5"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/diff_head"
                            android:textSize="20sp"
                            android:text="Course Difficulty:"
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <RatingBar
                            android:id="@+id/course_diff"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:saveEnabled="true"
                            android:visibility="gone"
                            android:isIndicator="true"
                            android:numStars="5"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/offered"
                            android:textSize="20sp"
                            android:text="Course Offered During: "
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/avg_hrs"
                            android:textSize="20sp"
                            android:text="Avg. Hours Per Week: "
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:gravity="start"
                            android:id="@+id/assign"
                            android:layout_marginTop="10dp"
                            android:textSize="20sp"
                            android:text="Assignment Frequency: "
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:gravity="start"
                            android:id="@+id/other_head"
                            android:layout_marginTop="10dp"
                            android:textSize="20sp"
                            android:text="Course have the following:"
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:gravity="start"
                            android:id="@+id/otherDescription"
                            android:layout_marginTop="2dp"
                            android:textSize="20sp"
                            android:text="Description:"
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card7"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lightGrey">

                    <LinearLayout
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:orientation="vertical"
                        android:id="@+id/lls7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/grade_head"
                            android:textSize="20sp"
                            android:text="Grade Distribution:"
                            android:textColor="#000"
                            android:fontFamily="@font/rubrik_sb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <com.github.mikephil.charting.charts.BarChart
                            android:layout_marginTop="10dp"
                            android:id = "@+id/BarChart"
                            android:layout_width = "match_parent"
                            android:layout_height = "250dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/allcomments"
                    android:fontFamily="@font/rubrik"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded"
                    android:text="View All Comments" />

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/rubrik"
                    android:textStyle="bold"
                    android:background="@drawable/rounded"
                    android:id="@+id/addReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Review" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

