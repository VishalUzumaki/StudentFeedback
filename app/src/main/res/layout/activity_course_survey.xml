<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CourseSurvey">

    <LinearLayout
        android:id="@+id/llmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/appBar_fb"
            android:paddingEnd="20dp"
            app:menu="@menu/iconsbars"
            android:gravity="top"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/back_arrow"
            android:background="?attr/colorPrimaryDark">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="Feedback Form"
                android:textColor="@android:color/white"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:id="@+id/scroller"
            android:fillViewport="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lls1"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/head1"
                    android:textSize="23sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:fontFamily="@font/rubrik"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please provide your Feedback for the course" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/head2"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="@font/rubrik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Graduate Standings" />

                <Spinner
                    android:id="@+id/standingsReview"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="20dp"
                    android:backgroundTint="@color/lightGrey"
                    android:background="@drawable/rounded"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubrik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Professor" />

                <Spinner
                    android:id="@+id/porfessorSelection"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="20dp"
                    android:backgroundTint="@color/lightGrey"
                    android:background="@drawable/rounded"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubrik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Course Grade" />

                <Spinner
                    android:id="@+id/gradeReview"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="20dp"
                    android:backgroundTint="@color/lightGrey"
                    android:background="@drawable/rounded"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubrik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Professor Rating" />


                <Spinner
                    android:id="@+id/professorRatingReview"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="20dp"
                    android:backgroundTint="@color/lightGrey"
                    android:background="@drawable/rounded"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />


                <TextView
                    android:id="@+id/textViewsdfs"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubrik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coursse Rating" />

                <Spinner
                    android:id="@+id/courseRatingreview"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="20dp"
                    android:backgroundTint="@color/lightGrey"
                    android:background="@drawable/rounded"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/hourseweekdfd"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubrik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hours per week" />


                <EditText
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:backgroundTint="@color/lightGrey"
                    android:background="@drawable/rounded2"
                    android:hint="Hours spent per week"
                    android:id="@+id/hoursReview"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="number" />


                <TextView
                    android:id="@+id/textView13"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubrik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Difficulty" />


                <Spinner
                    android:id="@+id/difficultyreview"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="20dp"
                    android:backgroundTint="@color/lightGrey"
                    android:background="@drawable/rounded"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/textView15"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubrik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comments" />

                <EditText
                    android:id="@+id/commentsReview"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add your comments" />

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/rubrik"
                    android:textStyle="bold"
                    android:background="@drawable/rounded"
                    android:id="@+id/submitSurvey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit Feedback" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>